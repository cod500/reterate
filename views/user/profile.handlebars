<div class="container">
    <br>
    {{>_search-bar}}
    <div class="row my-2">
        <div class="col-8 col-m-6 col-lg-4 order-lg-1 text-center avatar">
            <img src="/user/image/{{profile.id}}" class="mx-auto img-fluid" alt="avatar">
            <h4 class="mt-2">{{profile.name}}</h4>
        </div>
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#messages" data-toggle="tab" class="nav-link">Photos added</a>
                </li>
                {{#if user}}
                <li class="nav-item">
                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Edit</a>
                </li>
                {{/if}}
            </ul>
            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="mt-2"><span class="fa fa-clock-o
                                    ion-clock float-right"></span> Recent
                                Reviews
                            </h5>

                            <!--/comments start-->
                            {{#each ratings}}
                            <hr>
                            <div class="row">
                                <div class="col-4 col-sm-3">
                                    <img src="/restaurant/image/{{restaurant.id}}" class="user-restaurant-listing">
                                    <div class="review-block-name"><a
                                            href="/restaurant/sort/{{restaurant.id}}/recent">{{restaurant.name}}</a>
                                    </div>
                                    <div class="review-block-date">{{formatDate date}}<br /></div>
                                </div>
                                <div class="col-sm-9">
                                    <div class="review-block-rate">
                                        <span class="star" data-score={{rating}}></span>
                                    </div>
                                    <div class="review-block-description">{{review}}</div>
                                </div>
                            </div>
                            {{/each}}
                            <!--/comments end-->

                        </div>
                    </div>
                    <!--/row-->
                </div>
                <div class="tab-pane" id="messages">
                    <div class="row text-center text-lg-left">
                        {{#each ratings}}
                        {{#if image}}
                        <div class="col-lg-4 col-md-3 col-6 review">
                            <a href="/restaurant/review/image/{{id}}" target="_blank" class="d-block mb-4 h-100">
                                <img class="img-fluid thumbnail img-thumbnail
                                    rounded" src="/restaurant/review/image/{{id}}">
                            </a>
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
                {{#if user}}
                <div class="tab-pane" id="edit">
                    <form role="form" action="/user/update/{{user.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label
                                form-control-label">Name</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" value={{user.name}} name="name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label
                                form-control-label">Email</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="email" name="username" value="{{user.email}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label
                                form-control-label">Password</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="password" name="password" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label
                                form-control-label">Confirm password</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="password" name="confirm">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label
                                form-control-label"></label>
                            <div class="col-lg-9">
                                <a href="/user/profile/{{user.id}}"><input type="button" class="btn bg-secondary
                                        btn-secondary mr-3" value="Cancel"></a>
                                <input type="submit" class="btn" value="Save">
                            </div>
                        </div>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>

    </div>
</div>